{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022", "dom", "esnext.asynciterable", "node"],
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": true,
    "allowJs": false,

    /* Modules */
    "module": "commonjs",

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "tests/*": ["tests/*"]
    },
    "resolveJsonModule": true,

    /* Emit */
    "sourceMap": true,
    "noEmitOnError": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      "@react-polymorph/*": ["source/renderer/react-polymorph/*"]
    }
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*"
  ]
}
